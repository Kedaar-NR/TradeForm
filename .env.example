# Database Configuration
# Railway will set this automatically in production
# For local dev, use SQLite or Railway database URL
DATABASE_URL=sqlite:///./tradeform.db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# AI API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Application Settings
SECRET_KEY=your_secret_key_here
ENVIRONMENT=development

# Frontend
VITE_API_URL=http://localhost:8000
# Legacy fallback; prefer VITE_API_URL going forward
REACT_APP_API_URL=http://localhost:8000
# Backend URL used by the Vercel proxy (set this to your deployed backend root, no trailing slash)
BACKEND_API_URL=http://localhost:8000
