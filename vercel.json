{
    "buildCommand": "cd frontend && npm run build",
    "installCommand": "cd frontend && npm install",
    "outputDirectory": "frontend/build",
    "framework": null,
  "rewrites": [
    {
      "source": "/api/:path*",
            "destination": "https://tradeform-production.up.railway.app/api/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
    }
    ],
    "headers": [
        {
            "source": "/media/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/logos/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*\\.(?:js|css))",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}
